[koji]

;configuration for koji cli tool

;url of XMLRPC server
server = http://koji.katello.org/kojihub

;url of web interface
weburl = http://koji.katello.org/koji

;url of package download site
topurl = http://koji.katello.org/

;path to the koji top directory
;topdir = /mnt/koji

;configuration for SSL athentication

;client certificate
cert = /home/<%= node[:user] %>/.koji/katello.crt

;certificate of the CA that issued the client certificate
ca = /home/<%= node[:user] %>/.koji/katello-ca.crt

;certificate of the CA that issued the HTTP server certificate
serverca = /home/<%= node[:user] %>/.koji/katello-ca.crt
